# AWS RDS PostgreSQL Configuration Template
# After provisioning your RDS instance, update these values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# AWS RDS Database Configuration
# Format: postgresql://[USERNAME]:[PASSWORD]@[RDS_ENDPOINT]:[PORT]/[DATABASE_NAME]
# Example: postgresql://admin:YourStrongPassword@nextjs-db.abc123.us-east-1.rds.amazonaws.com:5432/ttaurban
DATABASE_URL="postgresql://admin:CHANGE_THIS_PASSWORD@your-rds-endpoint.region.rds.amazonaws.com:5432/ttaurban"

# RDS Instance Details (for documentation)
RDS_ENDPOINT=your-rds-endpoint.region.rds.amazonaws.com
RDS_PORT=5432
RDS_DATABASE=ttaurban
RDS_USERNAME=admin
RDS_PASSWORD=CHANGE_THIS_PASSWORD
RDS_REGION=us-east-1

# Authentication & JWT
AUTH_SECRET=prod_auth_secret_change_to_secure_random_min_32_characters_12345
JWT_SECRET=prod_jwt_access_secret_use_openssl_rand_base64_64_for_production
JWT_REFRESH_SECRET=prod_jwt_refresh_secret_use_openssl_rand_base64_64_for_prod

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_BUCKET_NAME=ttaurban-files

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_SENDER=no-reply@ttaurban.com

# Application Configuration
NODE_ENV=production
DEBUG=false

# Backup Configuration
AWS_RDS_BACKUP_RETENTION_DAYS=7
AWS_RDS_BACKUP_WINDOW=03:00-04:00
AWS_RDS_MAINTENANCE_WINDOW=mon:04:00-mon:05:00
