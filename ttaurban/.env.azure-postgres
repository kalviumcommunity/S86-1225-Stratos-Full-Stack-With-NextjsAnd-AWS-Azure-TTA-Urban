# Azure Database for PostgreSQL Configuration Template
# After provisioning your Azure PostgreSQL instance, update these values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Azure PostgreSQL Database Configuration
# Format: postgresql://[USERNAME]@[SERVER_NAME]:[PASSWORD]@[SERVER_NAME].postgres.database.azure.com:[PORT]/[DATABASE_NAME]?ssl=true
# Example: postgresql://adminuser@nextjs-db-server:YourStrongPassword@nextjs-db-server.postgres.database.azure.com:5432/ttaurban?ssl=true
DATABASE_URL="postgresql://adminuser@your-server-name:CHANGE_THIS_PASSWORD@your-server-name.postgres.database.azure.com:5432/ttaurban?ssl=true&sslmode=require"

# Azure PostgreSQL Instance Details (for documentation)
AZURE_POSTGRES_SERVER=your-server-name.postgres.database.azure.com
AZURE_POSTGRES_PORT=5432
AZURE_POSTGRES_DATABASE=ttaurban
AZURE_POSTGRES_USERNAME=adminuser@your-server-name
AZURE_POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
AZURE_POSTGRES_REGION=eastus

# Authentication & JWT
AUTH_SECRET=prod_auth_secret_change_to_secure_random_min_32_characters_12345
JWT_SECRET=prod_jwt_access_secret_use_openssl_rand_base64_64_for_production
JWT_REFRESH_SECRET=prod_jwt_refresh_secret_use_openssl_rand_base64_64_for_prod

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=ttaurban-rg
AZURE_STORAGE_ACCOUNT=ttaurbanfiles

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_SENDER=no-reply@ttaurban.com

# Application Configuration
NODE_ENV=production
DEBUG=false

# Backup Configuration
AZURE_POSTGRES_BACKUP_RETENTION_DAYS=7
AZURE_POSTGRES_GEO_REDUNDANT_BACKUP=false
